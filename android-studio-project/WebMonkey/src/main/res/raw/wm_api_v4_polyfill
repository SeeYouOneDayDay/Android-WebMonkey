_GM_addApiToObject(
  GM,
  {
    // -----------
    // synchronous
    // -----------
    'exit':        GM_exit,
    'loadFrame':   GM_loadFrame,
    'loadUrl':     GM_loadUrl,
    'startIntent': GM_startIntent,
    'toastLong':   GM_toastLong,
    'toastShort':  GM_toastShort,

    // ------------
    // asynchronous
    // ------------
    'getUrl':      _GM_promisifyApiMethod(GM_getUrl),
    'resolveUrl':  _GM_promisifyApiMethod(GM_resolveUrl)
  }
);
